@model PagedList.IPagedList<DataLayer.EF.Product>
@using PagedList.Mvc;
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" type="text/css" href="~/assests/client/css/bootstrap.min.css">
    <!-- style css -->
    <link rel="stylesheet" type="text/css" href="~/assests/client/css/style.css">
    <!-- Responsive-->
    <link rel="stylesheet" href="~/assests/client/css/responsive.css">
    <!-- fevicon -->
    <link rel="icon" href="~/assests/client/images/fevicon.png" type="image/gif" />
    <!-- Scrollbar Custom CSS -->
    <link rel="stylesheet" href="~/assests/client/css/jquery.mCustomScrollbar.min.css">
    <!-- Tweaks for older IEs-->
    <link rel="stylesheet" href="https://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css">
    <!-- fonts -->
    <link href="https://fonts.googleapis.com/css?family=Great+Vibes|Open+Sans:400,700&display=swap&subset=latin-ext" rel="stylesheet">
    <!-- owl stylesheets -->
    <link rel="stylesheet" href="~/assets/client/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/assets/client/css/owl.theme.default.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/fancybox/2.1.5/jquery.fancybox.min.css" media="screen">
    <link href="https://unpkg.com/gijgo@1.9.13/css/gijgo.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/PagedList.css" rel="stylesheet" />
    <!-- Custom fonts for this template-->
    <link href="~/assests/admin/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="~/assests/admin/css/sb-admin-2.min.css" rel="stylesheet">
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse" title="more options">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("NTQ-SHOP", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Login", "Index", "Login", new { area = "Admin" }, new { @class = "btn", @style ="background-color:#fff; size:18px;" })</li>

                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <h1 class="product_taital"> Products</h1>
                </div>
            </div>

            <div class="product_section_2 layout_padding container">
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-xl-3 col-lg-3 col-md-3 col-sm-6">
                            <div class="product_box">
                                <h4 class="bursh_text">@item.ProductName</h4>
                                <p class="lorem_text">@item.Slug </p>
                                <a href="/Admin/Product/Detail/@item.ID">
                                    <img src="@item.Path" class="image_1">
                                </a>
                                <div class="btn_main">
                                    <div class="buy_bt">
                                        <ul>
                                            <li class="active"><a href="#">Buy Now</a></li>
                                            <div class="seemore_bt">
                                                <button type="button" class="btn btn-outline-danger">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-heart" viewBox="0 0 16 16">
                                                        <path d="m8 2.748-.717-.737C5.6.281 2.514.878 1.4 3.053c-.523 1.023-.641 2.5.314 4.385.92 1.815 2.834 3.989 6.286 6.357 3.452-2.368 5.365-4.542 6.286-6.357.955-1.886.838-3.362.314-4.385C13.486.878 10.4.28 8.717 2.01L8 2.748zM8 15C-7.333 4.868 3.279-3.04 7.824 1.143c.06.055.119.112.176.171a3.12 3.12 0 0 1 .176-.17C12.72-3.042 23.333 4.867 8 15z"></path>
                                                    </svg>
                                                    Wishlist
                                                </button>
                                            </div>
                                        </ul>
                                    </div>
                                    <h3 class="price_text">Price @item.Price</h3>
                                </div>
                            </div>
                        </div>


                    }
                </div>
                @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = ViewBag.SearchString, trending = ViewBag.Trending }))
            </div>
        </div>
    </div>
    <script src="~/assests/admin/vendor/jquery/jquery.min.js"></script>
    <script src="~/assests/admin/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/assests/admin/vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="/assests/admin/js/plugins/ckfinder/ckfinder.js"></script>
    <!-- Custom scripts for all pages-->
    <script src="~/assests/admin/js/sb-admin-2.min.js"></script>

    <!-- Page level plugins -->
    <script src="~/ssests/admin/vendor/chart.js/Chart.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="~/assests/admin/js/demo/chart-area-demo.js"></script>
    <script src="~/assests/admin/js/demo/chart-pie-demo.js"></script>
    <script src=" https://unpkg.com/sweetalert/dist/sweetalert.min.js "></script>
</body>

</html>
