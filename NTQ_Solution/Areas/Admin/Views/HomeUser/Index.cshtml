@model PagedList.IPagedList<DataLayer.EF.Product>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutUser.cshtml";
}
@if (TempData["UserMessage"] != null)
{
    <div class="alert alert-success alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        </button> <h5><i class="icon fas fa-check"></i> @TempData["UserMessage"]</h5>
    </div>
}
@if (TempData["EditUserMessage"] != null)
{
    <div class="alert alert-success alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        </button> <h5><i class="icon fas fa-check"></i> @TempData["EditUserMessage"]</h5>
    </div>
}
@if (TempData["DeleteUserMessage"] != null)
{
    <div class="alert alert-success alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        </button> <h5><i class="icon fas fa-check"></i> @TempData["DeleteUserMessage"]</h5>
    </div>
}
<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h1 class="product_taital"> Products</h1>
        </div>
    </div>

    <div class="product_section_2 layout_padding container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-xl-3 col-lg-3 col-md-3 col-sm-6">
                    <div class="product_box">
                        <h4 class="bursh_text">@item.ProductName</h4>
                        <p class="lorem_text">@item.Slug </p>
                        <a href="#">
                            <img src="@item.Path" class="image_1">
                        </a>
                        <div class="btn_main">
                            <div class="buy_bt">
                                <ul>
                                    <li class="active"><a href="#">Buy Now</a></li>
                                    <li><a href="#">Add to wishlist</a></li>
                                </ul>
                            </div>
                            <h3 class="price_text">Price @item.Price</h3>
                        </div>
                    </div>
                </div>


            }
        </div>
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = ViewBag.SearchString, trending = ViewBag.Trending }))
    </div>
</div>
<!-- product section end -->
<!-- footer section start -->
